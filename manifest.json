{
  "manifest_version": 3,
  "name": "Snap Lead Manager",
  "version": "1.0.0",
  "description": "Extensión para automatización de Facebook con integración N8N híbrida",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "webNavigation",
    "windows"
  ],
  "host_permissions": [
    "https://*.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
