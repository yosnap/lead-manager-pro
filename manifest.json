{
  "manifest_version": 3,
  "name": "Snap Lead Manager",
  "version": "1.0.0",
  "description": "Extensión para automatización de Facebook con integración N8N híbrida",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "webNavigation",
    "windows"
  ],
  "host_permissions": [
    "https://*.facebook.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["js/content.js", "debug/debug.js"],
      "css": ["css/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "css/*", "js/*", "images/*"],
      "matches": ["*://*.facebook.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
